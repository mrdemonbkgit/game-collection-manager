{
  "name": "game-collection",
  "version": "1.0.0",
  "description": "Personal PC game collection manager with AI curator",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "test": "npm run test --workspaces --if-present",
    "test:server": "npm run test --workspace=server",
    "test:client": "npm run test --workspace=client",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "e2e": "playwright test --project=chromium",
    "e2e:smoke": "playwright test e2e/tests/smoke.spec.ts",
    "e2e:grid": "playwright test e2e/tests/library-grid.spec.ts",
    "e2e:scroll": "playwright test e2e/tests/infinite-scroll.spec.ts",
    "e2e:ui": "playwright test --ui",
    "e2e:report": "playwright show-report e2e/results/html-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
